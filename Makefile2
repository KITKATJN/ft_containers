NAME = test

SRCS = main.cpp ft_containers/tests/mapTest.cpp ft_containers/tests/vectorTest.cpp ft_containers/tests/stackTest.cpp ft_containers/tests/setTest.cpp

OBJS = $(SRCS:.cpp=.o)

CLANG = clang++ -std=c++98 -g -Wall -Werror -Wextra -fsanitize=address
all: $(NAME)

$(NAME): $(OBJS)
	$(CLANG) $(OBJS) -o $(NAME)

$(OBJS): %.o : %.cpp
	$(CLANG) -c $< -o $@

clean:
	rm -rf $(OBJS)

fclean: clean
	rm -rf $(NAME)

re: fclean all
